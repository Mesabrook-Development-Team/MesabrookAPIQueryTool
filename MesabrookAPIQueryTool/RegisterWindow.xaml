<Window x:Class="MesabrookAPIQueryTool.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MesabrookAPIQueryTool"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type={x:Type local:RegisterWindowViewModel}}"
        Loaded="Window_Loaded">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Closing">
            <b:InvokeCommandAction Command="{Binding WindowClosingCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Application Registration Required" FontWeight="Bold" FontSize="20" />

        <WrapPanel Grid.Row="1" VerticalAlignment="Center" Orientation="Horizontal">
            <RadioButton Content="Enter Client ID:" Margin="4,0" VerticalAlignment="Center" IsChecked="{Binding IsEnteringClientID}" />
            <TextBox Width="200" Margin="4,0" Text="{Binding ClientID}" />
            <Button Content="Save" Margin="4,0" Padding="4,0" FontWeight="Bold" Command="{Binding SaveClientIDCommand}" />
        </WrapPanel>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <RadioButton Grid.Row="0" Content="Register Online" Margin="4,0" IsChecked="{Binding IsRegisteringOnline}" />
            <wv2:WebView2 Grid.Row="1" Margin="4" Source="{Binding RegistrationURL}">
                <wv2:WebView2.Style>
                    <Style TargetType="wv2:WebView2">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRegisteringOnline}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </wv2:WebView2.Style>
            </wv2:WebView2>
        </Grid>
    </Grid>
</Window>
